<Page
    x:Class="InputBeams.Views.ConfigurationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InputBeams.Views"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="0 10 0 0" ColumnSpacing="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Side (Configuration Panel) -->
        <StackPanel Grid.Column="0" Spacing="10">

            <!-- Master Controls Panel -->
            <Grid Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="22 16" CornerRadius="8">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left StackPanel -->
                        <ColumnDefinition Width="*" />
                        <!-- Spacer (takes up remaining space) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right StackPanel -->
                    </Grid.ColumnDefinitions>

                    <!-- Left Controls (Edit Shortcuts, Xbox Widget) -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <Button Content="Edit Shortcuts" />
                        <Button Content="Xbox Widget" />
                    </StackPanel>

                    <!-- Right Controls (Undo, Apply) -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Undo" />
                        <Button Content="Apply" />
                    </StackPanel>
            </Grid>

            <!-- Input Configuration Panel -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="22 16" CornerRadius="10">
                <StackPanel Spacing="10">

                    <!-- Shoulder & System Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <!-- Left Shoulder -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" Spacing="8">
                            <TextBlock Text="Left Shoulder" />
                            <ComboBox PlaceholderText="LB/L1" />
                            <ComboBox PlaceholderText="LT/L2" />
                        </StackPanel>
                        <!-- System Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Spacing="20">
                            <TextBlock Text="System Buttons" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="6">
                                <ComboBox PlaceholderText="Back" />
                                <ComboBox PlaceholderText="Start" />
                                <ComboBox PlaceholderText="Touchpad" />
                                <ComboBox PlaceholderText="PS/Xbox" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Right Shoulder -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" Spacing="8">
                            <TextBlock Text="Right Shoulder" />
                            <ComboBox PlaceholderText="RB/R1" />
                            <ComboBox PlaceholderText="RT/R2" />
                        </StackPanel>
                    </Grid>

                    <Border Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,5" />

                    <!-- Analog & Action Buttons -->
                    <Grid RowSpacing="8" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Left Analog (Diamond Shape) -->
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Left Analog" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <ComboBox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" PlaceholderText="Up"/>
                        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                            <ComboBox PlaceholderText="Left"/>
                            <ComboBox PlaceholderText="Right"/>
                        </StackPanel>
                        <ComboBox Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" PlaceholderText="Down"/>

                        <!-- Center L3 & R3 -->
                        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Spacing="6">
                            <TextBlock Text="Thumbsticks" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
                            <ComboBox PlaceholderText="L3"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Spacing="6">
                            <ComboBox PlaceholderText="R3"/>
                        </StackPanel>

                        <!-- Action Buttons (Diamond Shape) -->
                        <TextBlock Grid.Column="2" Grid.Row="0" Text="Action Buttons" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <ComboBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" PlaceholderText="Y"/>
                        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                            <ComboBox PlaceholderText="X"/>
                            <ComboBox PlaceholderText="B"/>
                        </StackPanel>
                        <ComboBox Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" PlaceholderText="A"/>
                    </Grid>

                    <Border Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,5" />

                    <!-- D-Pad & Right Analog (Diamond Layout) -->
                    <Grid RowSpacing="8" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- D-Pad (Diamond Shape) -->
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="D-Pad" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <ComboBox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" PlaceholderText="Up"/>
                        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                            <ComboBox PlaceholderText="Left"/>
                            <ComboBox PlaceholderText="Right"/>
                        </StackPanel>
                        <ComboBox Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" PlaceholderText="Down"/>

                        <!-- Right Analog (Diamond Shape) -->
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="Right Analog" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <ComboBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" PlaceholderText="Up"/>
                        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                            <ComboBox PlaceholderText="Left"/>
                            <ComboBox PlaceholderText="Right"/>
                        </StackPanel>
                        <ComboBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" PlaceholderText="Down"/>
                    </Grid>


                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Right Side (Gamepad UI & Advanced Settings) -->
        <StackPanel Grid.Column="1" Spacing="10">

            <!-- Gamepad Live Preview -->
            <Border Background="{ThemeResource ControlFillColorSecondaryBrush}" Padding="10" CornerRadius="10">
                <Viewbox>
                    <Grid x:Name="GamepadPreview" Width="300" Height="200">
                        <!-- Gamepad UI will be added here -->
                    </Grid>
                </Viewbox>
            </Border>

            <!-- Advanced Settings -->
            <Grid Background="{ThemeResource ControlFillColorSecondaryBrush}" Padding="12" CornerRadius="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title & Reset Button -->
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Advanced Settings" FontWeight="Bold" FontSize="20" />
                        <TextBlock Text="Fine-tune your gamepad settings" FontWeight="Normal" FontSize="14" Opacity="0.8" />
                    </StackPanel>
                    <Button Content="Reset" HorizontalAlignment="Right" Padding="10,5"/>
                </Grid>

                <Border Grid.Row="1" Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,6" />

                <!-- Checkboxes & Other Settings -->
                <StackPanel Grid.Row="2" Spacing="12">
                    <CheckBox Content="Enable pointer acceleration" FontSize="14"/>
                    <CheckBox Content="Invert X Axis" FontSize="14"/>
                    <CheckBox Content="Invert Y Axis" FontSize="14"/>
                    <CheckBox Content="Use gyroscope as pointer" FontSize="14"/>

                    <Border Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,6" />

                    <!-- Pointer Sensitivity -->
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                            <TextBlock Text="Pointer Sensitivity" FontSize="14"/>
                            <TextBlock x:Name="SensitivityValueText" Text="50" FontWeight="Bold"/>
                        </StackPanel>
                        <Slider Minimum="0" Maximum="100" Value="50" HorizontalAlignment="Stretch" x:Name="SensitivitySlider"/>
                    </StackPanel>

                    <Border Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,6" />

                    <!-- Bottom Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                        <Button Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Refresh" />
                                <TextBlock Text="Auto" FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <Button Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Save" />
                                <TextBlock Text="Save" FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <Button Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="OpenFile" />
                                <TextBlock Text="Load" FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <Button Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Delete" />
                                <TextBlock Text="Clear" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </StackPanel>

    </Grid>
</Page>
